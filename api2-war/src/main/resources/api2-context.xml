<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
    ">
	<!-- CORELIB -->
	<import resource="corelib-db-context.xml" />
	<import resource="corelib-solr-context.xml" />

	<!-- INTERNAL -->
	<import resource="internal/api2-mvc-interceptors.xml" />
	<import resource="internal/api2-security.xml" />

	<bean id="corelib_db_mongo" class="com.mongodb.Mongo">
		<constructor-arg value="#{europeanaProperties['mongodb.host']}"/>
		<constructor-arg value="#{europeanaProperties['mongodb.port']}"/>
	</bean>

	<bean id="apiLogger" class="eu.europeana.corelib.db.logging.api.ApiLogger">
		<constructor-arg ref="corelib_db_mongo"/>
	</bean>


	<!-- DEVELOPMENT -->
	<!-- import resource="internal/api2-development.xml" / -->
</beans>